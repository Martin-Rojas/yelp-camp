<% layout('templates/boilerplate') %>

<div class="row">
   <h1 class="text-center">New Campground</h1>
   <div class="col-md-6 offset-3">
      <form
         action="/campgrounds"
         method="post"
         class="validated-form"
         novalidate
         enctype="multipart/form-data"
      >
         <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input
               class="form-control"
               type="text"
               name="campground[title]"
               id="title"
               required
            />
            <div class="invalid-feedback">Please enter a place name.</div>
         </div>

         <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input
               class="form-control"
               type="text"
               name="campground[location]"
               id="location"
               required
            />
            <div class="invalid-feedback">Please enter a location.</div>
         </div>

         <div class="mb-3">
            <label for="price" class="form-label">Campground price</label>
            <div class="input-group">
               <span
                  class="input-group-text"
                  id="price-label"
                  placeholder="0.00"
                  >$</span
               >
               <input
                  type="text"
                  class="form-control"
                  id="price"
                  placeholder="0.00"
                  aria-label="price"
                  aria-describedby="price-label"
                  name="campground[price]"
                  required
               />
               <div class="invalid-feedback">
                  Please enter a price. Example (10.00).
               </div>
            </div>
         </div>

         <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea
               class="form-control"
               type="text"
               name="campground[description]"
               id="description"
               required
            ></textarea>
            <div class="invalid-feedback">
               Please enter a description of the campground.
            </div>
         </div>

         <div class="mb-3 custom-file">
            <label for="image" class="form-label">Choose Images</label>
            <input
               class="form-control"
               type="file"
               id="image"
               name="image"
               multiple
            />
            <label for="image" class="custom-file-label text-muted"></label>
         </div>

         <button class="btn btn-success mb-3" id="submit">
            Add new campground
         </button>
      </form>
   </div>
</div>
