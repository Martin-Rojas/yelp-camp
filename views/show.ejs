<% layout('templates/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css" />

<div class="row">
   <div class="col-md-6">
      <div class="card mb-3">
         <img
            src="<%= campGroundFound.image %>"
            class="card-img-top"
            alt="campground"
         />
         <div class="card-body">
            <h5 class="card-title"><%= campGroundFound.title %></h5>
            <p class="card-text"><%= campGroundFound.description %></p>
         </div>
         <ul class="list-group list-group-flush">
            <li class="text-muted list-group-item">
               <%= campGroundFound.location %>
            </li>
            <li class="list-group-item">
               Summitted by: <%= campGroundFound.author.username %>
            </li>
            <li class="list-group-item">$<%= campGroundFound.price %>/night</li>
         </ul>
         <div class="card-body">
            <% if (currentUser &&
            campGroundFound.author.equals(currentUser._id)) { %>

            <form
               action="/campgrounds/<%= campGroundFound._id %>/edit"
               method="get"
               class="d-inline"
            >
               <button class="btn btn-success">Edit</button>
            </form>

            <form
               action="/campgrounds/<%= campGroundFound._id %>?_method=DELETE"
               method="POST"
               class="d-inline"
            >
               <button class="btn btn-danger">DELETE</button>
            </form>
            <% } %>
            <a class="btn btn-info d-inline" href="/campgrounds"
               >All campgrounds
            </a>
         </div>
         <div class="card-footer text-muted">2 days ago</div>
      </div>
   </div>
   <div class="col-md-6">
      <%if (currentUser) {%>
      <form
         action="/campgrounds/<%= campGroundFound._id %>/reviews"
         class="mb-3 validated-form"
         method="POST"
         novalidate
      >
         <fieldset class="starability-checkmark">
            <legend>First rating:</legend>
            <input
               type="radio"
               id="no-rate"
               class="input-no-rate"
               name="review[rating]"
               value="1"
               checked
               aria-label="No rating."
            />
            <input
               type="radio"
               id="first-rate1"
               name="review[rating]"
               value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
               type="radio"
               id="first-rate2"
               name="review[rating]"
               value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
               type="radio"
               id="first-rate3"
               name="review[rating]"
               value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
               type="radio"
               id="first-rate4"
               name="review[rating]"
               value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
               type="radio"
               id="first-rate5"
               name="review[rating]"
               value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
         </fieldset>

         <label class="form-label" for="body">Review</label>
         <textarea
            class="form-control"
            name="review[body]"
            id="body"
            cols="30"
            rows="10"
            required
         ></textarea>

         <div class="invalid-feedback">Must not be blank.</div>

         <button class="btn btn-info mt-2">Submit</button>
      </form>
      <%}%>
      <div>
         <% campGroundFound.reviews.forEach(review => { %>
         <div class="card mb-3">
            <div class="card-body">
               <h5 class="card-title">Rating: <%= review.rating %></h5>

               <h3>Rated element name</h3>
               <p class="starability-result" data-rating="<%= review.rating %>">
                  Rated: 3 stars
               </p>

               <h6 class="card-subtitle mb-2 text-muted">
                  by <%= review.author.username%>
               </h6>
               <p class="card-text">Review: <%= review.body %></p>
               <form
                  action="/campgrounds/<%= campGroundFound._id %>/reviews/<%= review._id %>?_method=DELETE"
                  method="POST"
               >
                  <%if (currentUser && review.author.equals(currentUser._id))
                  {%>
                  <button class="btn btn-small btn-danger">Delete</button>
                  <%}%>
               </form>
            </div>
         </div>

         <% }) %>
      </div>
   </div>
</div>
